{
    "app-id": "com.rhtraining.demoapp",
    "runtime": "com.redhat.Platform",
    "runtime-version": "el9",
    "sdk": "com.redhat.Sdk",
    "command": "hello-world.py",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup": ["/include", "/lib/pkgconfig"],
    "modules": [
        {
            "name": "python3",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=/app python3-gobject"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "python3-gobject-3.42.0-1.el9.x86_64.rpm",
                    "url": "https://mirrors.rpmfusion.org/free/el/updates/9/x86_64/python3-gobject-3.42.0-1.el9.x86_64.rpm",
                    "sha256": "b8a04c7445f5df2790d7eb979907d4917c706c7f474ffd5d1052f83396d10c8b"
                }
            ],
            "ensure-writable": [
                "/lib/python*/site-packages"
            ]
        },
        {
            "name": "demoapp",
            "buildsystem": "simple",
            "build-commands": [
                "chmod +x hello-world.py",
                "install -Dm755 hello-world.py /app/bin/hello-world.py",
                "install -Dm644 com.rhtraining.demoapp.desktop /app/share/applications/com.rhtraining.demoapp.desktop",
                "install -Dm644 com.rhtraining.demoapp.png /app/share/icons/hicolor/128x128/apps/com.rhtraining.demoapp.png"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "hello-world.py"
                },
                {
                    "type": "file",
                    "path": "com.rhtraining.demoapp.desktop"
                },
                {
                    "type": "file",
                    "path": "com.rhtraining.demoapp.png"
                }
            ]
        }
    ]
}
